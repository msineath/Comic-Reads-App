extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  meta(property="og:title" content="Comic Reads")
  meta(property="og:description" content="Find Your next Comic Book! Add them to your shelves, read, write, and edit your reviews!")
  meta(property="og:image" content="https://gamebnb.s3.us-east-2.amazonaws.com/d1ecaaa415ed4a6aa3af366821fde0eb.png")
  //- add page specific js
  script(src="/scripts/index.js" type="module" defer)

block content
  script(src="/scripts/demoButton.js" type="module" defer)

  .wrapper
    .grid.grid__container      
      .grid__section.grid__section-1
        .grid__item.grid__item-1-1 Welcome to Comic Reads!
        .grid__item.grid__item-1-2
          input#searchTitle.form-control(type='searchTitle', name="searchTitle", placeholder='Enter Search Criteria Here')
          button(type='button' class='search_btn') Search
            a(href="https://www.youtube.com/watch?v=dQw4w9WgXcQ")
        .grid__item.grid__item-1-3

      .grid__section.grid__section-2.flex-container-1
        div(class='title-search')
          div(id='first-dropdown')
            label(class='search-label')  Search by:
            select(name='Title' placeholder="Title" id="title" class="dropdown")
              option(value='' style="display: none") Title
              each title in titles
                option(value= title[1])= title[0]
        div(class='author-search')
          div(id='second-dropdown')
            label(class='search-label')  Search by:
            select(name='Author' placeholder="Author" id="author" class="dropdown")
              option(value='' style="display: none") Author
              each author in authors
                option(value= author)= author
        div(class='genre-search')
          div(id='third-dropdown')
            label(class='search-label') Search by:
            select(name='Genre' placeholder="Genre" id="genre" class="dropdown")
              option(value='' st  yle="display: none") Genre
              each genre in genres
                option(value= genre)= genre
        
