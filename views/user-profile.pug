extends layout

include shelf.pug
include utils.pug
    link(rel="stylesheet" href="/stylesheets/shelf.css")    

block content
    if(userShelves)
        div(class="user__shelves")
            h1 Your Shelves 
            each shelf in userShelves
                div(class='shelfInstance')
                    h3(class="shelf-title") #{shelf.name}
                    div(class="shelf" id=shelf.name)
                        each Comic in shelf.Comics
                            +comicCard( Comic.coverUrl, Comic.title, Comic.author, Comic.genre, Comic.id, shelf = true  )